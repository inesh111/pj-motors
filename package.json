{
  "name": "pj-motors",
  "version": "0.1.0",
  "private": true,
  "main": "electron-main.js",
  "scripts": {
    "dev": "next dev -p 3000",
    "build:web": "next build",
    "start:web": "next start -p 3000",
    "build": "npm run build:web",
    "start": "npm run start:web",
    "lint": "eslint",
    "dev:next": "next dev -p 3000",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "dev:desktop": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dist": "npm run build:web && electron-builder"
  },
  "build": {
    "appId": "com.pjmotors.app",
    "productName": "PJ Motors",
    "asar": false,
    "mac": {
      "target": "dmg",
      "icon": "electron-assets/icon.png"
    },
    "files": [
      "electron-main.js",
      "package.json",
      ".next/**",
      "public/**",
      "next.config.*",
      "prisma/**",
      "uploads/**",
      "node_modules/**",
      "electron-assets/**"
    ],
    "extraMetadata": {
      "main": "electron-main.js"
    }
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "next": "16.0.6",
    "prisma": "^5.22.0",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "concurrently": "^9.2.1",
    "electron": "^39.2.4",
    "electron-builder": "^25.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.6",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  }
}