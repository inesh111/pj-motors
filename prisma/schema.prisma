datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Car {
  id                     Int      @id @default(autoincrement())
  chassisCode            String   @unique
  make                   String
  model                  String
  variant                String?
  year                   Int?
  colour                 String?
  grade                  String?

  // Money fields - store in AUD
  totalPurchasePriceAUD  Decimal
  salePrice              Decimal?
  profit                 Decimal?

  // use string instead of enum for status
  status                 String   @default("JAPAN")

  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  documents              CarDocument[]
}

model CarDocument {
  id        Int      @id @default(autoincrement())
  carId     Int
  car       Car      @relation(fields: [carId], references: [id], onDelete: Cascade)

  // use string instead of enum for type
  type      String
  filePath  String
  name      String?

  createdAt DateTime @default(now())

  @@index([carId, type])
}